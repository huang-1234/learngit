.swiper-item {
  display: block;
  height: 150px;
}

.content {
  height: calc(100vh - 150px);
}

.children {
  float: left;
  display: relative;
  height: calc(50vh - 75px);
  width: 50%;
}

.img-wrapper {
  display: absolute;
  width: 20vw;
  height: 20vw;
  left: 50%;
  top: 50%;
  transform: translate(50%, 50%);
}

